{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+).*(warning|error)\\s+(.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				},
			},
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"label": "tsc: build - tsconfig.json"
		}
	]
}